<div class="card">
   <h3 class="card-header"> Edit Post </h3>
   <div class="card-body">
        <form class="form update-post-form"  data-id="{{id}}">
            <div class="form-group">
                <label>Post title:</label>
                <textarea class="form-input" type="text" id="post-title" name="post-title">{{title}} </textarea>
            </div>
            <div class="form-group">
                <label>content:</label>
                <textarea class="form-input" id="post-content" name="post-content"> {{content}} </textarea>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Update</button>
            </div>
        </form>
    </div>
</div>

<script src="/js/edit-post.js"></script>

 